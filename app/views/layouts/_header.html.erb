<header class="header navbar navbar-expand-md navbar-fixed-top navbar-light">
    <div class="container">
    <%= link_to "Skill Checker", root_path, id: "logo", class: "navbar-brand d-flex" %>
    <ul class="nav navbar-nav d-flex justify-content-end" >

        <% if logged_in %>
            <li class="nav-link"><%= link_to "Users", "#" %></li>
            <li class="dropdown">
                <button class="btn dropdown-toggle" type="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <%= link_to "Profile", current_user, class: "dropdown-item" %>
                    <%= link_to "Settings", "#", class: "dropdown-item" %>
                    <div class="dropdown-divider"></div>
                    <%= link_to "Log out", logout_path, method: :delete, class: "dropdown-item" %>
                </div>
            </li>
        <% else %>
            <li class="nav-link"><%= link_to "Home", root_path %></li>
            <li class="nav-link"><%= link_to "About", about_path %></li>
            <li class="nav-link"><%= link_to "Log in", login_path %></li>
        <% end %>

    </ul>
    </div>
</header>