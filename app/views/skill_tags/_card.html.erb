<div class="card">
    <div class="card-body row flex-nowrap">
        <div class="col-sm-8">
            <% user = skill.user %>
            <%= link_to gravatar_for(user), user %>
            <h5 class="card-title"><%= user.name %></h5>
        </div>
        <%# user_skill = @user_skills[0] %>
        <%# @user_skills.find_by(user_id: user.id) %>
        <div class="col-sm-4 d-flex justify-content-center align-items-end button-section">
            
            <%= render partial: 'user_skills/endorse_button', locals: {user_skill: skill, user: user} %>
            
        </div>
    </div>
</div>