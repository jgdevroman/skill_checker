<% provide(:title, "Sign up") %>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            
            <h1>Sign up</h1>
            
            <div class="signupform">
                <%= form_for(@user) do |f| %>
                    <%= f.label :name %>
                    <%= f.text_field :name %>
        
                    <%= f.label :email %>
                    <%= f.text_field :email %>
        
                    <%= f.label :password %>
                    <%= f.password_field :password %>
        
                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation %>
        
                    <%= f.submit "Register", class: "btn btn-primary" %>
            </div>
    </div>

        <% end %>
    </div>
</div>
